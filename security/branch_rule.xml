<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--branch contracts-->
        <record id="sale_contract_branch_user_rule" model="ir.rule">
            <field name="name">user Branch sale contracts</field>
            <field name="model_id" ref="model_sale_contract"/>
            <field name="domain_force">
                [('branch_id','=',user.branch_id.id),'|',('user_id','=',user.id),('user_id','=',False)]
            </field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="sale_contract_branch_user_rule_all" model="ir.rule">
            <field name="name">All Branch sale contracts</field>
            <field name="model_id" ref="model_sale_contract"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>
    </data>

    <data noupdate="0">
        <!--branch sales-->
        <record id="sale_order_personal_rule" model="ir.rule">
            <field name="name">Personal Orders</field>
            <field ref="model_sale_order" name="model_id"/>
            <field name="domain_force">
                [('branch_id','=',user.branch_id.id),'|',('user_id','=',user.id),('user_id','=',False)]
            </field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="sale_order_report_personal_rule" model="ir.rule">
            <field name="name">Personal Orders Analysis</field>
            <field name="model_id" ref="model_sale_report"/>
            <field name="domain_force">
                [('branch_id','=',user.branch_id.id),'|',('user_id','=',user.id),('user_id','=',False)]
            </field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="sale_order_branch_user_rule_all" model="ir.rule">
            <field name="name">All Branch sale Orders</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>
    </data>
</odoo>